<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.NoteIt" parent="Theme.Material3.Light.NoActionBar">

        <!-- Primary colors -->
        <item name="colorPrimary">@color/ultramarineBlue</item>
        <item name="colorPrimaryVariant">@color/seashell</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryFixedVariant">@color/black</item>
        <item name="colorPrimaryContainer">@color/ultramarineBlue</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/monsoon</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="colorSurfaceContainer">@color/white</item>
        <item name="colorSurfaceContainerLow">@color/white</item>
        <item name="colorSurfaceContainerHigh">@color/white</item>
        <item name="colorSurfaceContainerHighest">@color/seashell</item>

        <!--================Theme customization=================-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Window & Toolbar Background color -->
        <item name="android:windowBackground">?colorSurface</item>

        <!-- Icon color -->
        <item name="colorControlNormal">?colorOnSurface</item>

    </style>

</resources>