<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.NoteIt" parent="Theme.Material3.Dark.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ultramarineBlue</item>
        <item name="colorPrimaryVariant">@color/cinder</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ultramarineBlue</item>
        <item name="colorSecondaryVariant">@color/ultramarineBlue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <!-- Window & Toolbar Background color -->
        <item name="android:windowBackground">@color/cinder</item>




    </style>
</resources>