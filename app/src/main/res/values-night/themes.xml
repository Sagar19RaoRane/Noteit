<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.NoteIt" parent="Theme.Material3.Dark.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/cinder</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/ultramarineBlue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <!-- Window & Toolbar Background color -->
        <item name="android:windowBackground">@color/cinder</item>

        <!-- Text Color -->
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Text color hint -->
        <item name="android:textColorHint">#777777</item>

        <!-- Icon color -->
        <item name="iconTint">@color/white</item>
        <item name="tint">@color/white</item>

        <!-- Searchbar color -->
        <item name="colorPrimary">@color/mirage</item>

        <!-- Card background color -->
        <item name="colorSecondary">@color/mirage</item>

        <item name="strokeColor">@color/transparent</item>



    </style>
</resources>