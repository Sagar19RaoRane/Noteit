<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background">


    <EditText
        android:id="@+id/editText_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/transparent"
        android:fontFamily="@font/manrope_medium"
        android:gravity="start"
        android:hint="Enter your text here"
        android:textColor="@color/white"
        android:textColorHint="#777777"
        android:textSize="@dimen/note_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_counter"
        android:textCursorDrawable="@drawable/color_cursor"/>

    <EditText
        android:id="@+id/editText_heading"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="16dp"
        android:background="@color/transparent"
        android:fontFamily="@font/manrope_semibold"
        android:hint="Heading"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textColorHint="#777777"
        android:textSize="@dimen/note_heading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textCursorDrawable="@drawable/color_cursor"/>

    <TextView
        android:id="@+id/textView_counter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/manrope_medium"
        android:text="Sun, 10:30 | 0 Characters "
        android:textColor="#747474"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_heading" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_createnote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/createnote_fragment_toolbar_menu"
        android:paddingEnd="8dp"
        app:navigationIcon="@drawable/back_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>